import java.util.Scanner;

public class ejer2 {
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);

        String contraseñaCorrecta = "contraseñasimple2025";
        String contraseña;
        int intentos = 3;

        System.out.println("===== Verificador de contraseña =====");

        while (intentos > 0) {

            System.out.println("Introduce la contraseña adecuada:");
            contraseña = input.nextLine();

            if (contraseña.equals(contraseñaCorrecta)) {
                System.out.println("Acceso concedido!");
                input.close();
                return;   // Finaliza el programa inmediatamente
            } else {
                intentos--;

                if (intentos > 0) {
                    System.out.println("Contraseña incorrecta. Intentos restantes: " + intentos);
                }
            }
        }

        // Si el while termina sin acertar:
        System.out.println("Acceso denegado. Contacte a soporte.");


    }
}
